<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="io.demor.nuts.sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.controller.ControllerActivity"
                android:label="Controller"/>
        <activity
                android:name=".ui.controller.ControllerSimpleActivity"
                android:label="@string/title_activity_simple_controller"/>
        <activity
                android:name=".ui.controller.ControllerCheckActivityActivity"
                android:label="CheckActivity"/>
        <activity
            android:name=".ui.jumper.JumperActivity"
            android:label="@string/title_activity_jumper"/>
        <activity android:name=".ui.jumper.JumperSimpleActivity"/>
        <activity
                android:name=".ui.controller.ControllerLifeCircleActivity"
                android:label="@string/title_activity_controller_life_circle"/>
    </application>

</manifest>
