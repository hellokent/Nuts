<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuts.sample" >

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.controller.SimpleControllerActivity"
            android:label="@string/title_activity_simple_controller" />
        <activity
            android:name=".ui.controller.ControllerActivity"
            android:label="@string/title_activity_controller" />
        <activity
            android:name=".ui.controller.CheckActivityControllerActivity"
            android:label="CheckActivity" />
        <activity
            android:name=".ui.jumper.JumperActivity"
            android:label="@string/title_activity_jumper"/>

        <activity android:name=".ui.jumper.JumperSimpleActivity"/>
    </application>

</manifest>
