<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_margin="16dp">

    <Button android:id="@+id/simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_simple_controller"/>

    <Button android:id="@+id/check_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_activity"/>

    <Button android:id="@+id/life_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/life_circle"/>
</LinearLayout>